{
    "plugins": [
            "plugins/markdown"
        ],
    "recurseDepth": 10,
    "source": {
        "include": ["app/", "data-store/"],
        "exclude": [
            "build/",
            "app/lib/",
            "node_modules/",
            "app/util/uuid",
            "app/ripple/worker",
            "app/app",
            "app/config",
            "main"
        ],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "sourceType": "module",
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "dateFormat": "ddd MMM Do YYYY",
        "outputSourceFiles": true,
        "outputSourcePath": true,
        "footer": "",
        "navType": "vertical",
        "theme": "cosmo",
        "linenums": true,
        "collapseSymbols": false,
        "inverseNav": true,
        "protocol": "html://",
        "methodHeadingReturns": true
    },
    "opts": {
        "template": "./node_modules/ink-docstrap/template",
        "encoding": "utf8",             
        "destination": "../docs/",
        "recurse": true,
        "readme": "../README.md"
    }
}

